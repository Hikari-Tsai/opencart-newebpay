{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-SpgatewayMPG2" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ SpgatewayMPG2_cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ heading_title }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ SpgatewayMPG2_action }}" method="post" enctype="multipart/form-data" id="form-SpgatewayMPG2" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label">
              {{ SpgatewayMPG2_text_status}}
            </label>
            <div class="col-sm-10">
              <select name="payment_SpgatewayMPG2_status" class="form-control">
                <option value="0" {{ (payment_SpgatewayMPG2_status == 0)?  'selected="selected"' : ''  }}>{{ SpgatewayMPG2_text_disabled }}</option>
                <option value="1" {{ (payment_SpgatewayMPG2_status == 1)?  'selected="selected"' : ''  }}>{{ SpgatewayMPG2_text_enabled }}</option>
              </select>
            </div>
          </div>
          <div class="form-group required">
              <label class="col-sm-2 control-label" for="test_mode">
                {{ SpgatewayMPG2_text_test_mode }}
              </label>
              <div class="col-sm-10">
                  <select name="payment_SpgatewayMPG2_test_mode" class="form-control" id="test_mode">
                    <option value="0" {{ (payment_SpgatewayMPG2_test_mode == 0)?  'selected="selected"' : ''  }}>No</option>
                    <option value="1" {{ (payment_SpgatewayMPG2_test_mode == 1)?  'selected="selected"' : ''  }}>Yes</option>
                  </select>
              </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="storename">
              {{ SpgatewayMPG2_text_storename }}
            </label>
            <div class="col-sm-10">
              <input type="text" name="payment_SpgatewayMPG2_storename" value="{{ payment_SpgatewayMPG2_storename }}" class="form-control" id="storename" />
              {% if SpgatewayMPG2_error_storename %}
              <div class="text-danger">{{ SpgatewayMPG2_error_storename }}</div>
              {% endif %}
            </div>
            
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label">
              {{ SpgatewayMPG2_text_merchant_id }}
            </label>
            <div class="col-sm-10">
              <input type="text" name="payment_SpgatewayMPG2_merchant_id" value="{{ payment_SpgatewayMPG2_merchant_id }}" class="form-control" />
              {% if SpgatewayMPG2_error_merchant_id %}
              <div class="text-danger">{{ SpgatewayMPG2_error_merchant_id }}</div>
              {% endif %}
            </div>
            
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label">
              {{ SpgatewayMPG2_text_hash_key }}
            </label>
            <div class="col-sm-10">
              <input type="text" name="payment_SpgatewayMPG2_hash_key" value="{{ payment_SpgatewayMPG2_hash_key }}" class="form-control" />
              {% if SpgatewayMPG2_error_hash_key %}
              <div class="text-danger">{{ SpgatewayMPG2_error_hash_key }}</div>
              {% endif %}
            </div>
            
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label">
              {{ SpgatewayMPG2_text_hash_iv }}
            </label>
            <div class="col-sm-10">
              <input type="text" name="payment_SpgatewayMPG2_hash_iv" value="{{ payment_SpgatewayMPG2_hash_iv }}" class="form-control" />
              {% if SpgatewayMPG2_error_hash_iv %}
              <div class="text-danger">{{ SpgatewayMPG2_error_hash_iv }}</div>
              {% endif %}
            </div>
            
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">
              {{ SpgatewayMPG2_text_payment_methods }}
            </label>
            <div class="col-sm-4">
              <input type="checkbox" name="payment_SpgatewayMPG2_payment_methods[CREDIT]" value="1" {% if payment_SpgatewayMPG2_payment_methods.CREDIT is defined %} checked="checked" {% endif %}  />
              <label class="control-label">
                &nbsp; {{ SpgatewayMPG2_text_credit }}
              </label>
              <br />
              <input type="checkbox" name="payment_SpgatewayMPG2_payment_methods[WEBATM]" value="1" {% if payment_SpgatewayMPG2_payment_methods.WEBATM is defined %} checked="checked" {% endif %}  />
              <label class="control-label">
                &nbsp; {{ SpgatewayMPG2_text_webatm }}
              </label>
              <br />
              <input type="checkbox" name="payment_SpgatewayMPG2_payment_methods[VACC]" value="1" {% if payment_SpgatewayMPG2_payment_methods.VACC is defined %} checked="checked" {% endif %}  />
              <label class="control-label">
                &nbsp; {{ SpgatewayMPG2_text_atm }}
              </label>
              <br />
              <input type="checkbox" name="payment_SpgatewayMPG2_payment_methods[CVS]" value="1" {% if payment_SpgatewayMPG2_payment_methods.CVS is defined %} checked="checked" {% endif %}  />
              <label class="control-label">
                &nbsp; {{ SpgatewayMPG2_text_cvs }}
              </label>
              <br />
              <input type="checkbox" name="payment_SpgatewayMPG2_payment_methods[BARCODE]" value="1" {% if payment_SpgatewayMPG2_payment_methods.BARCODE is defined %} checked="checked" {% endif %}  />
              <label class="control-label">
                &nbsp; {{ SpgatewayMPG2_text_barcode }}
              </label>
              <br />
              <input type="checkbox" name="payment_SpgatewayMPG2_payment_methods[UNIONPAY]" value="1" {% if payment_SpgatewayMPG2_payment_methods.UNIONPAY is defined %} checked="checked" {% endif %}  />
              <label class="control-label">
                &nbsp; {{ SpgatewayMPG2_text_unionpay }}
              </label>
              <br />
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label">
              {{ SpgatewayMPG2_text_expiredate }}
            </label>
            <div class="col-sm-10">
              <input type="text" name="payment_SpgatewayMPG2_expiredate" value="{{ payment_SpgatewayMPG2_expiredate }}" class="form-control" />
              {% if SpgatewayMPG2_error_expiredate %}
              <div class="text-danger">{{ SpgatewayMPG2_error_expiredate }}</div>
              {% endif %}
            </div>
            
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">
              {{ SpgatewayMPG2_text_conditioninsflag }}
            </label>
            <div class="col-sm-4">
              <input type="text" name="payment_SpgatewayMPG2_insflagday" value="{{ payment_SpgatewayMPG2_insflagday }}" class="form-control" placeholder="{{ SpgatewayMPG2_entry_insflagday }}" />
            </div>
            <div class="col-sm-4">
              <input type="text" name="payment_SpgatewayMPG2_insflagmode" value="{{ payment_SpgatewayMPG2_insflagmode }}" class="form-control" placeholder="{{ SpgatewayMPG2_entry_insflagmode }}" />
            </div>
            
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-create-status">
                {{ SpgatewayMPG2_text_create_status }}
            </label>
            <div class="col-sm-2">
                <select name="payment_SpgatewayMPG2_create_status" id="input-create-status" class="form-control">
                    {% for order_status in order_statuses %}
                    {% if order_status.order_status_id == payment_SpgatewayMPG2_create_status %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                    {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                    {% endif %}
                    {% endfor %}
                </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-getcode-status">
              {{ SpgatewayMPG2_text_getcode_status }}
            </label>
            <div class="col-sm-2">
              <select name="payment_SpgatewayMPG2_getcode_status" id="input-getcode-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_SpgatewayMPG2_getcode_status %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}                    
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-success-status">
              {{ SpgatewayMPG2_text_success_status }}
            </label>
            <div class="col-sm-2">
              <select name="payment_SpgatewayMPG2_success_status" id="input-success-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_SpgatewayMPG2_success_status %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}                    
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-failed-status">
              {{ SpgatewayMPG2_text_failed_status }}
            </label>
            <div class="col-sm-2">
              <select name="payment_SpgatewayMPG2_failed_status" id="input-failed-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_SpgatewayMPG2_failed_status %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}                    
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-geo-zone">{{ SpgatewayMPG2_text_geo_zone }}</label>
            <div class="col-sm-2">
              <select name="payment_SpgatewayMPG2_text_geo_zone" id="input-geo-zone" class="form-control">
                <option value="0">{{ SpgatewayMPG2_text_all_zones }}</option>
                {% for geo_zone in geo_zones %}
                {% if geo_zone.geo_zone_id == payment_SpgatewayMPG2_geo_zone_id %}
                <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                {% else %}
                <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ SpgatewayMPG2_text_sort_order }}</label>
            <div class="col-sm-2">
              <input type="text" name="payment_SpgatewayMPG2_sort_order" value="{{ payment_SpgatewayMPG2_sort_order }}" class="form-control" />
            </div>
          </div>
		  <!--<div class="form-group">
            <label class="col-sm-2 control-label" for="input-instruction"><span data-toggle="tooltip" title="{{ help_instruction }}">{{ entry_instruction }}</span></label>
            <div class="col-sm-10">
              <textarea name="payment_Spgatewaypro_instruction" placeholder="{{ entry_instruction }}" id="input-instruction" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control" >{{ payment_Spgatewaypro_instruction }}</textarea>
            </div>
          </div>-->
        </form>
      </div>
    </div>
  </div>
</div>
